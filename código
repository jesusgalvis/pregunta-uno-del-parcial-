#include<stdio.h>
#include<stdlib.h>

int main(){
	
	int i,num,aux=0,aux2=0,aux3=0,p1,p2,pf;
	printf("2.ingrese un numero para calcular la suma ");
	scanf("%d",&num);
	
	for(i=0;i<num;i++){//5
		
		if(i%2==0){
		
		aux=num-i;
		aux2=aux*aux;
		aux3+=aux2;
		p1=aux3;
		
		//printf("%d ",p1);		
		}
	}
	
	//printf("\n========");
aux=0;
aux2=0;
aux3=0;	
		for(i=0;i<num;i++){//5
		
		if(i%2!=0){
		
		aux=num-i;
		aux2=aux*aux;
		aux3+=aux2;
		p2=aux3;
	//	printf("\n%d ",p2);		
		}
		
	}

pf=p1+(-1*p2);

		printf("\n el resultado de la suma es %d ",pf);		


	return 0;
}
